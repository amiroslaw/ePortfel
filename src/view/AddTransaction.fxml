<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AddTransactionController">
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Data" />
            <Label text="Kwota" GridPane.rowIndex="1" />
            <Label text="Opis" GridPane.rowIndex="2" />
            <Label text="Kategoria" GridPane.rowIndex="3" />
            <Button fx:id="tbnCancel" mnemonicParsing="false" onAction="#cancel" text="Anuluj" GridPane.rowIndex="5" />
            <Button fx:id="btnOK" mnemonicParsing="false" onAction="#addTransaction" text="OK" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <DatePicker fx:id="dataPicker" GridPane.columnIndex="1" />
            <ChoiceBox fx:id="choiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="txtAmount" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtDescription" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="lblWarning" GridPane.rowIndex="4" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
